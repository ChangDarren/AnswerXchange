<!-- Side navigation -->
<div class= "user_details">
  <% if (user.local.username) { %>
    <div class = "local-user">
       <img src=<%= user.photo_URI %> class="profile my-2"
          alt="User photo">
      <h3 align="middle"> User details </h3>
      <h5> Name: <%= user.local.username %></h5>
      <h5> Email: <%= user.local.email %> </h5>
      <h5> Major: <%= user.local.major %> </h5>
    </div>
  <% } else if (user.facebook.username) { %>
  <!-- Facebook details -->
    <div class = "facebook-user">
      <!-- image not working -->
      <img src=<%= user.facebook.photoLink %> class="profile my-2"
          alt="User photo">
      <h3 align="middle"> Facebook details </h3>
      <!-- name currently not working -->
      <h5> Name: <%= user.facebook.username %> </h5>
      <h5> Email: <%= user.facebook.email %> </h5>
  </div>
  <% } %>

</div>

<style>
.profile {
  border-radius: 25%;
  height: 150px;
}
.user_details {
  margin-top: 5%;/* Initial buffer to seperate from the navbar */
  width:100%;
  height: 95%;
  z-index: 1; /* Stay on top */
  top: 0; /* Stay at the top */
  left: 0;
  background-color: #E7EFFC; /* Green */
  border: black 2px solid;
  overflow-x: hidden; /* Disable horizontal scroll */
  padding-top: 3em; /* Place content 60px from the top */
  text-align: center;
}
</style>
