<!-- Create the box for the login -->
<!-- views/partials/login_component.ejs -->
<form action="" method="post">
  <div class = "border border-dark rounded p-4">

    <div class = "form-group row">
      <label for="username">Username: </label>
      <div class="col-4">
        <input  type="text" class="form-control" name="username" id="username" placeholder="Username">
      </div>
    </div>
    <div class="form-group row">
      <label for="password">Password: </label>
      <div class="col-4">
        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        <small class="form-text"><a href="/signup">Don't have an account?</a></small>
      </div>
    </div>
    <% if (locals.errors) { %>
      <div class="alert alert-danger" role="alert">
        <%= errors %>
      </div>
    <% } %>
      <button type="submit" class="btn btn-primary">Login</button>
  </div>

  <!-- Login for facebook  -->
  <div class = "jumbotron text-center">
    <h1><span ><i class = "fa fa-lock"></i></span> Or Login with: </h1>
    <div class="row my-3">
      <div class="col">
       <a href = "/auth/facebook" class="btn btn-primary"><span class = "fab fa-facebook"></span> Facebook </a>
      </div>
      <div class="col">
        <a href="/auth/google" class="btn btn-primary"><span class="fab fa-google-plus"></span> Google </a>
      </div>
    </div>
  </div>

</form>
