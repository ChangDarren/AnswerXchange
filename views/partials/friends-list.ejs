<!-- prereq: list of friends exist -->
<% for (let friend of friends) { %>
  <% if (friend.local.username) { %>
    <div class="border border-primary my-2 p-4" style="overflow: hidden">
      <div class="float-left">
        <h5>Name: <%= friend.username %></h5>
        <br />
        <h5>Major: <%= friend.major %></h5>
      </div>
      <div class="float-right">
        <img src=<%= friend.photo_URI %>
            class="smaller-profile"
            alt=<%= friend.username %> />
      </div>
    </div>
  <% } else if (friend.facebook.username) { %>
    <div class="border border-primary my-2 p-4" style="overflow: hidden">
      <div class="float-left">
        <h5>Name: <%= friend.username %></h5>
        <br />
      </div>
      <div class="float-right">
        <img src=<%= friend.facebook.photoLink %>
            class="smaller-profile"
            alt=<%= friend.username %> />
      </div>
    </div>
  <% } else if (friend.google.username) { %>
    <div class="border border-primary my-2 p-4" style="overflow: hidden">
      <div class="float-left">
        <h5>Name: <%= friend.username %></h5>
        <br />
      </div>
      <div class="float-right">
        <img src=<%= friend.google.photoLink %>
            class="smaller-profile"
            alt=<%= friend.username %> />
      </div>
    </div>
  <% } %>
<% } %>
