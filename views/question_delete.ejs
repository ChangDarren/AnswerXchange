<!DOCTYPE html>
<html>
<%- include('partials/head') %>
  <body>
    <div class="container">
      <%- include('partials/navBar') %>
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <h1 class="my-4 display-4">Delete</h1>
          <h3> Delete your question here </h3>
          <hr class="my-4">
          <form action="" method="post">
            <div class="border border-dark rounded p-4 jumbotron">
              <div class="form-group">
                <h5>By <%=question.userName %> </h5>
                <div class="my-4 p-2 border border-dark rounded">
                  <label for="curr_answer"> Current Question: </label>
                  <h4 class = "my-2"> <%= question.question %> </h4>
                  <input class="form-control" hidden=true
                      value=<%= question._id %> name="questionID" id="questionID">
                  <button class="btn btn-primary" type="submit">Delete</button>
                </div>
              </div>
            </div>
          </form>
        </div>
    </div>
  </body>
<%- include('partials/footer') %>
</html>
