<!DOCTYPE html>
<html>
<%- include('partials/head') %>
  <body>
    <div class="container">
      <%- include('partials/navBar') %>
      <div class="row">
        <div class="col"></div>
        <div class="col-8">
          <h1 class="my-4 display-4">Delete</h1>
          <h3> Delete your question here </h3>
          <hr class="my-4">
          <form action="" method="post">
            <div class="border border-success rounded p-4 jumbotron">
              <div class="form-group">
                <p>By <%=question.userName %> </p>
                <div class="my-4 p-2 border border-success rounded">
                  <label for="curr_answer"> Current Question: </label>
                  <p class = "my-4"> <%= question.question %> </p>
                  <input class="form-control" hidden=true
                      value=<%= question._id %> name="questionID" id="questionID">
                  <button class="btn btn-primary" type="submit">Delete</button>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="col"></div>
    </div>
  </body>
<%- include('partials/footer') %>
</html>
