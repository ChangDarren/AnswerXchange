<!DOCTYPE html>
<html>
<%- include('partials/head') %>
  <body>
    <div class="container-fluid">
      <%- include('partials/navBar') %>
      <h1 class="my-4 display-4">Upload</h1>
      <h3> Type your queries here and upload your question</h3>
      <hr class="my-4">
      <form action="" method="post">
        <div class="border border-success rounded p-4 jumbotron">
          <div class="form-group ">
              <label for="code">Module Code:</label>
              <input type="text" class="form-control" id="code"
                  name="code" required=true>
          </div>
          <div class="form-group">
            <label for="semester">Semester:</label>
            <select class="form-control" id="semester" name="semester">
              <option>16/17 Semester 1</option>
              <option>16/17 Semester 2</option>
              <option>17/18 Semester 1</option>
              <option selected>17/18 Semester 2</option>
          </div>
          <div class="form-group">
            <label for="question">Question text: </label>
            <textarea class="form-control my-4" rows="7" id="question"
                name="question" placeholder="Your question here" required=true></textarea>
          </div>
          <input class="form-control" hidden=true value=user._id name="user"
            id="user">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </body>
<%- include('partials/footer') %>
</html>
