<!-- questions, code, semester -->
<!DOCTYPE html>
<html>
  <%- include('partials/head') %>
  <body>
    <div class="container">
      <%- include('partials/navBar') %>
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <h1 class="display-2">Search Results</h1>
          <h3 class = "my-2">Search module: <%= code %>,  Search semester: <%= semester %><h3>
          <hr class="my-2">
          <div class = "jumbotron">
          <div class="border border-dark rounded p-4 my-2 text-muted">
            <% for (let question of questions) { %>
              <h5>By <%= question.userName %></h5>
              <a href=<%= question.url %>>
                <div class="border border-secondary rounded view overlay p-2 my-2">
                  <h4 class = "my-2"><%= question.question %></h4>
                </div>
                <div class="post-content mx-3">
                    <p class = "my-4"><%= question.question %></p>
                    <small>Replied by: <%= question.replies %></small>
                  <div>
                    <a href=<%= question.url %>>
                      <button class="btn btn-primary my-2">More info...</button>
                    </a>
                  </div>
                </div>
              </div>
              <% } %>-->
              <%- include('partials/recentposts') %>
          </div>
        </div>
          <%- include('partials/footer') %>
        </div>
    </div>
  </body>
</html>
